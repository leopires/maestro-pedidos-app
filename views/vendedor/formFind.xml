<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "../../../../public/layouts/view.dtd">
<view>
    <mform id="formFind" title="Vendedores cadastrados" close=">pedidos/main" base="formBase">
        <fields>
            <mhcontainer>
                <mtextfield id="nomeVendedor" label="Nome de vendedor" value="$this->data->nomeVendedor" width="350px"/>
                <mbuttonfind/>
            </mhcontainer>
            <mspacer height="10px"/>
            <mdatagrid id="gridFind" query="$this->data->query" pageLength="15">
                <mdatagridcolumn field="idVendedor" visible="false"/>
                <mdatagridhyperlink field="nome" action=">pedidos/vendedor/formObject/#0#" title="Vendedor" width="40%"/>
                <mdatagridcolumn field="email" title="E-Mail" width="20%" />
                <mdatagridcolumn field="totalClientes" title="Qtd. Clientes" width="20%" />
                <mdatagridcolumn field="totalPedidos" title="Pedidos emitidos" width="20%" />
            </mdatagrid>
        </fields>
    </mform>
</view>